<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.mis.javac.ViewCourse$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TableLayout
        android:id="@+id/course_table"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="*"
        android:shrinkColumns="*"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="9"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subjectid"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="@dimen/very_small_text"
                android:text="SubjectId\n"
                android:background="@drawable/table_border"
                android:layout_column="0" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subject_name"
                android:textSize="@dimen/very_small_text"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Subject Name\n"
                android:maxLength="50"
                android:background="@drawable/table_border"
                android:layout_column="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lecture"
                android:textSize="@dimen/very_small_text"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="L\n"
                android:background="@drawable/table_border"
                android:layout_column="2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tutorial"
                android:textSize="@dimen/very_small_text"
                android:layout_weight="1"
                android:text="T\n"
                android:textStyle="bold"
                android:background="@drawable/table_border"
                android:layout_column="3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/practical"
                android:textSize="@dimen/very_small_text"
                android:layout_weight="1"
                android:text="P\n"
                android:textStyle="bold"
                android:background="@drawable/table_border"
                android:layout_column="4" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/credit_hours"
                android:layout_weight="1"
                android:textSize="@dimen/very_small_text"
                android:text="Credit\nHrs"
                android:textStyle="bold"
                android:background="@drawable/table_border"
                android:layout_column="5" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contact_hours"
                android:text="Contact\nHrs"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="@dimen/very_small_text"
                android:background="@drawable/table_border"
                android:layout_column="6" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/elective"
                android:text="E\n"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="@dimen/very_small_text"
                android:background="@drawable/table_border"
                android:layout_column="7" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/type"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="@dimen/very_small_text"
                android:text="Type\n"
                android:background="@drawable/table_border"
                android:layout_column="8" />

        </TableRow>


    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/label"
        android:background="@color/details_background1"
        android:visibility="gone"
        />

    <TableLayout
        android:id="@+id/course_table_elective"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="*"
        android:shrinkColumns="*"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </TableLayout>

    </LinearLayout>
</RelativeLayout>
</ScrollView>