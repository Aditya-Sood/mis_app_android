<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_attendance_pre_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.mis.javac.Attendance.AttendancePreDetails">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_marginTop="6dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#acc"
        card_view:cardElevation="2sp"
        card_view:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/padding_in_details"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attendance Enquiry"
                android:padding="@dimen/padding_in_details"
                android:textColor="@color/white_overlay"
                android:textStyle="bold"
                android:background="@color/colorPrimaryDark"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/table_border"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Session Year"
                        android:textStyle="bold"/>

                    <Spinner
                        android:id="@+id/session_year_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overlapAnchor="false"
                        android:padding="1dp"
                        android:background="@drawable/view_on_focus">
                    </Spinner>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Session"
                        android:textStyle="bold"/>

                    <Spinner
                        android:id="@+id/session_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overlapAnchor="false"
                        android:padding="1dp"
                        android:background="@drawable/view_on_focus">
                    </Spinner>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Semester"
                        android:textStyle="bold"/>

                    <Spinner
                        android:id="@+id/semester_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overlapAnchor="false"
                        android:padding="1dp"
                        android:background="@drawable/view_on_focus">
                    </Spinner>

                </LinearLayout>

                <Button
                    android:id="@+id/submit_button"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/buttonshape"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/button_text"
                    android:textSize="@dimen/button_text_size"
                    android:text="Submit" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <include
        android:id="@+id/loader"
        layout="@layout/loader"
        android:visibility="gone"/>

    <include
        android:id="@+id/err"
        layout="@layout/error"
        android:visibility="gone"/>

    </FrameLayout>

</RelativeLayout>
