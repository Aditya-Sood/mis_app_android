<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="4dp"
        android:id = "@+id/side_icon"
        android:padding="5dp"
        android:background="@drawable/round_button"
        android:src="@drawable/meetings"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_weight="1">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#acc"
            card_view:cardElevation="2sp"
            card_view:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/user_post"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/post_upper_part">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/user_of_post"
                                android:text="Dr. Subhashis Chatterjee"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/post_text_size_1"
                                android:layout_gravity="left"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="3"
                            >

                            <ImageView
                                android:layout_width="@dimen/small_text"
                                android:layout_height="@dimen/small_text"
                                android:layout_gravity="center"
                                android:src="@drawable/clock"/>

                            <TextView
                                android:id="@+id/time_of_post"
                                android:layout_width="match_parent"
                                android:layout_height ="wrap_content"
                                android:text="7:00 am"
                                android:textColor="@color/grey"
                                android:textSize="@dimen/small_text"/>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/identification_user_of_post"
                        android:text="Training Placement Officer, Applied Mathematics"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/post_text_size_3"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:padding="2dp"
                    />

                <LinearLayout
                    android:id="@+id/post_payload"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/post_details"
                        android:text="Training Plajalkdsfdfsf d fsdf sd fs df fds klasjflkdjs kaldsfjlkajdfla afdcement Officer, Applied Mathematics"
                        android:textSize="@dimen/post_text_size_2"
                        />

                    <Button
                        android:id="@+id/multi_purpose_button"
                        style="?android:textAppearanceSmall"
                        android:layout_width="150dp"
                        android:layout_height="25dp"
                        android:background="@drawable/buttonshape"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/button_text"
                        android:textSize="@dimen/post_text_size_2"
                        android:text="Download attachment" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>